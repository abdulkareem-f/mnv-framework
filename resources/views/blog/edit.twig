{% extends 'layouts/master.twig' %}

{% block title %} {{ article.title }} {% endblock %}

{% block content %}

    <form method="post" action="{{ baseUrl }}articles/{{ article.id }}/update">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="{{ article.title }}" required autofocus>
        </div>
        <div class="mb-3">
            <label for="body" class="form-label">Body</label>
            <textarea id="body" name="body" class="form-control" required minlength="50" maxlength="4000" rows="8">{{ article.body|raw }}</textarea>
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Author</label>
            <input type="text" class="form-control" id="author" name="author" value="{{ article.author }}" required autofocus>
        </div>
        <button type="submit" class="btn btn-success">Update</button>
    </form>

{% endblock %}